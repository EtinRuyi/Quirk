@model Quirk.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutNoNavbar";
}

<div class="container" style="margin-top: 100px">
    <form method="post" asp-action="Login" class="form-style shadow">
        <h2 class="m-0 mb-4">Welcome back!</h2>
        <div class="mb-4">
            <div class="input-group flex-nowrap">
                <span class="input-group-text" id="username-addon">
                    <i class="bi bi-person-fill"></i>
                </span>
                <input type="text" id="username" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="username-addon" asp-for="UserName" required />
            </div>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="mb-4">
            <div class="input-group flex-nowrap">
                <span class="input-group-text" id="password-addon">
                    <i class="bi bi-key-fill"></i>
                </span>
                <input type="password" id="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon" asp-for="Password" required minlength="6" />
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mb-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" />
                <label class="form-check-label" for="disabledFieldsetCheck">
                    Remember me
                </label>
            </div>
            <a href="">Forgot password?</a>
        </div>
        <div class="mb-4">
            <button type="submit" class="btn btn-primary custom-btn">Login</button>
        </div>
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="position-relative my-5">
            <hr />
            <p class="m-0 px-3 position-absolute top-50 start-50 translate-middle"
               style="background-color: white">
                or SignUp with
            </p>
        </div>
        <div class="d-flex justify-content-center text-center m-4">
            <a href="GoogleLogin" class="m-2"><img src="~/google.png" alt="googlelogo" style="width: 50px; height: 50px; border-radius: 50%" /></a>
            <a href="https://web.facebook.com/login.php/?_rdc=1&_rdr" class="m-2"><img src="~/facebook.png" alt="facebooklogo" style="width: 50px; height: 50px; border-radius: 50%" /></a>
            <a href="https://twitter.com/login" class="m-2"><img src="~/Xlogo.png" alt="twitterlogo" style="width: 50px; height: 50px; border-radius: 50%" /></a>
        </div>
        <div class="mt-3">
            <p>
                Don't have an account?
                <a class="text-decoration-none"
                   asp-area=""
                   asp-controller="Auth"
                   asp-action="Register">
                    Sign Up
                </a>
            </p>
        </div>
    </form>
</div>